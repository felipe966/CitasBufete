@model CitasBufete.Models.Cliente

@{
    ViewData["Title"] = "Registro de cliente";
}

<h1>Registro de cliente</h1>

<h4>Cliente</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Nombre_completo" class="control-label"></label>
                <input asp-for="Nombre_completo" class="form-control" />
                <span asp-validation-for="Nombre_completo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Identificacion" class="control-label"></label>
                <input asp-for="Identificacion" class="form-control" />
                <span asp-validation-for="Identificacion" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Medio_pago" class="control-label"></label></br>
                @{
                    List<SelectListItem> listItems = new List<SelectListItem>
                    {
                       new SelectListItem{ Text="Tarjeta", Value = "Tarjeta" },
                       new SelectListItem{ Text="Depósito", Value = "Depósito" },
                       new SelectListItem{ Text="SINPE Móvil", Value = "SINPE Móvil" },
                    };
                }

                @Html.DropDownListFor(model => model.Medio_pago, listItems, "Seleccione")
                <span asp-validation-for="Medio_pago" class="text-danger"></span>
            </div></br>
            <div class="form-group">
                <label asp-for="Fecha_nacimiento" class="control-label"></label>
                <input asp-for="Fecha_nacimiento" class="form-control" />
                <span asp-validation-for="Fecha_nacimiento" class="text-danger"></span>
            </div></br>
            <div class="form-group">
                <input type="submit" value="Registrarse" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div></br>

<div></br>
    <a asp-controller="Home" asp-action="Index">Regresar</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
